{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://antigravity-os.dev/schemas/validation-result.json",
  "title": "Validation Result Schema",
  "description": "JSON Schema for validation result validation",
  "type": "object",
  "required": ["passed", "evidence", "confidence", "duration", "timestamp"],
  "properties": {
    "passed": {
      "type": "boolean",
      "description": "Whether the validation passed"
    },
    "evidence": {
      "type": "string",
      "minLength": 1,
      "description": "Evidence supporting the validation result"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Confidence score (0-100)"
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Duration of validation in milliseconds"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of validation"
    },
    "error": {
      "type": "string",
      "description": "Error message if validation failed"
    }
  }
}
